{
    "name": "desktop",
    "productName": "Bloom",
    "version": "0.1.7",
    "description": "Simple and secure web3 wallet for the IOTA and Shimmer ecosystem",
    "main": "public/build/main.process.js",
    "repository": "git@github.com:bloomwalletio/bloom.git",
    "author": "Bloom Labs Ltd <contact@bloomwallet.io>",
    "license": "Apache-2.0",
    "scripts": {
        "start": "npm-run-all -p start:dev start:electron",
        "start:dev": "cross-env NODE_ENV=development PLATFORM=desktop webpack-dev-server",
        "start:electron": "cross-env NODE_ENV=development PLATFORM=desktop electron --no-sandbox public/build/main.process.js",
        "start:electron-prod": "cross-env NODE_ENV=production PLATFORM=desktop electron public/build/main.process.js",
        "build": "yarn build:alpha",
        "build:dev": "cross-env NODE_ENV=development PLATFORM=desktop webpack",
        "build:alpha": "cross-env NODE_ENV=production PLATFORM=desktop STAGE=alpha webpack",
        "build:beta": "cross-env NODE_ENV=production PLATFORM=desktop STAGE=beta webpack",
        "build:prod": "cross-env NODE_ENV=production PLATFORM=desktop STAGE=prod webpack",
        "compile": "node scripts/compile.js",
        "compile:locally": "MACOS_SKIP_NOTARIZATION=true yarn compile",
        "compile:alpha:linux": "node scripts/compile.js alpha linux",
        "compile:alpha:mac": "node scripts/compile.js alpha mac",
        "compile:alpha:win": "node scripts/compile.js alpha win",
        "compile:beta:linux": "node scripts/compile.js beta linux",
        "compile:beta:mac": "node scripts/compile.js beta mac",
        "compile:beta:win": "node scripts/compile.js beta win",
        "compile:prod:linux": "node scripts/compile.js prod linux",
        "compile:prod:mac": "node scripts/compile.js prod mac",
        "compile:prod:win": "node scripts/compile.js prod win"
    },
    "dependencies": {
        "@amplitude/analytics-node": "1.3.5",
        "@ethereumjs/rlp": "4.0.1",
        "@ethereumjs/tx": "5.2.1",
        "@ethereumjs/util": "9.0.2",
        "@ledgerhq/hw-app-eth": "6.34.8",
        "@ledgerhq/hw-transport-node-hid": "6.28.3",
        "@ledgerhq/logs": "6.10.1",
        "@types/webpack-dev-server": "4.7.2",
        "buffer": "6.0.3",
        "dotenv": "16.3.1",
        "electron-dl": "3.5.1",
        "electron-log": "4.4.8",
        "electron-updater": "6.1.4",
        "https-browserify": "1.0.0",
        "keytar": "7.9.0",
        "node-machine-id": "1.1.12",
        "stream-http": "3.2.0",
        "url": "0.11.3"
    },
    "devDependencies": {
        "@types/webpack": "5.28.1",
        "copy-webpack-plugin": "11.0.0",
        "cross-env": "7.0.3",
        "css-loader": "6.10.0",
        "electron": "28.2.0",
        "electron-builder": "24.6.3",
        "@electron/notarize": "2.1.0",
        "esbuild": "0.19.5",
        "esbuild-loader": "3.0.1",
        "mini-css-extract-plugin": "2.7.6",
        "node-loader": "2.0.0",
        "npm-run-all": "4.1.5",
        "postcss-url": "10.1.3",
        "ts-node": "10.9.1",
        "webpack": "5.88.2",
        "webpack-cli": "5.1.4",
        "webpack-dev-server": "4.15.1"
    },
    "peerDependencies": {
        "postcss": "8.4.23"
    }
}
