{
    "name": "desktop",
    "productName": "Bloom",
    "version": "1.0.7",
    "description": "Simple and secure web3 wallet for the IOTA and Shimmer ecosystem",
    "main": "public/build/main.process.js",
    "repository": "git@github.com:bloomwalletio/bloom.git",
    "author": "Bloom Labs Ltd <contact@bloomwallet.io>",
    "license": "PolyForm Strict License 1.0.0",
    "scripts": {
        "start": "npm-run-all -p start:dev start:electron",
        "start:dev": "cross-env NODE_ENV=development PLATFORM=desktop webpack-dev-server",
        "start:electron": "cross-env NODE_ENV=development PLATFORM=desktop electron --no-sandbox public/build/main.process.js",
        "start:electron-prod": "cross-env NODE_ENV=production PLATFORM=desktop electron public/build/main.process.js",
        "build": "yarn build:alpha",
        "build:alpha": "cross-env NODE_ENV=production PLATFORM=desktop STAGE=alpha webpack",
        "build:beta": "cross-env NODE_ENV=production PLATFORM=desktop STAGE=beta webpack",
        "build:prod": "cross-env NODE_ENV=production PLATFORM=desktop STAGE=prod webpack",
        "compile": "node scripts/compile.js",
        "compile:locally": "MACOS_SKIP_NOTARIZATION=true yarn compile",
        "compile:alpha:linux": "yarn compile alpha linux",
        "compile:alpha:mac": "yarn compile alpha mac",
        "compile:alpha:win": "yarn compile alpha win",
        "compile:beta:linux": "yarn compile beta linux",
        "compile:beta:mac": "yarn compile beta mac",
        "compile:beta:win": "yarn compile beta win",
        "compile:prod:linux": "yarn compile prod linux",
        "compile:prod:mac": "yarn compile prod mac",
        "compile:prod:win": "yarn compile prod win"
    },
    "dependencies": {
        "@amplitude/analytics-node": "1.3.6",
        "@ledgerhq/hw-app-eth": "6.36.1",
        "@ledgerhq/hw-transport-node-hid": "6.28.6",
        "@ledgerhq/logs": "6.12.0",
        "@types/webpack-dev-server": "4.7.2",
        "buffer": "6.0.3",
        "classic-level": "1.4.1",
        "dotenv": "16.4.5",
        "electron-dl": "3.5.2",
        "electron-log": "5.1.5",
        "electron-updater": "6.1.8",
        "https-browserify": "1.0.0",
        "keytar": "7.9.0",
        "node-machine-id": "1.1.12",
        "stream-http": "3.2.0",
        "url": "0.11.3"
    },
    "devDependencies": {
        "@types/webpack": "5.28.5",
        "autoprefixer": "10.4.16",
        "copy-webpack-plugin": "12.0.2",
        "cross-env": "7.0.3",
        "css-loader": "7.1.1",
        "electron": "30.0.9",
        "electron-builder": "24.13.3",
        "@electron/notarize": "2.3.0",
        "esbuild": "0.20.2",
        "esbuild-loader": "4.1.0",
        "mini-css-extract-plugin": "2.9.0",
        "node-loader": "2.0.0",
        "npm-run-all": "4.1.5",
        "postcss-load-config": "5.0.3",
        "postcss-url": "10.1.3",
        "webpack": "5.92.1",
        "webpack-cli": "5.1.4",
        "webpack-dev-server": "5.0.4"
    },
    "peerDependencies": {
        "postcss": "8.4.23"
    }
}
