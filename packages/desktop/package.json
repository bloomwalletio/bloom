{
    "name": "desktop",
    "productName": "Bloom",
    "version": "0.1.0",
    "description": "Simple and secure web3 wallet for the IOTA and Shimmer ecosystem",
    "main": "public/build/main.process.js",
    "repository": "git@github.com:bloomwalletio/bloom.git",
    "author": "Charlie Varley <charlie@bloomwallet.io>",
    "license": "Apache-2.0",
    "scripts": {
        "start": "npm-run-all -p start:dev start:electron",
        "start:dev": "cross-env NODE_ENV=development PLATFORM=desktop webpack-dev-server",
        "start:electron": "cross-env NODE_ENV=development PLATFORM=desktop electron --no-sandbox public/build/main.process.js",
        "start:electron-prod": "cross-env NODE_ENV=production PLATFORM=desktop electron public/build/main.process.js",
        "build": "yarn build:alpha",
        "build:dev": "cross-env NODE_ENV=development PLATFORM=desktop webpack",
        "build:alpha": "cross-env NODE_ENV=production PLATFORM=desktop STAGE=alpha webpack",
        "build:beta": "cross-env NODE_ENV=production PLATFORM=desktop STAGE=beta webpack",
        "build:prod": "cross-env NODE_ENV=production PLATFORM=desktop STAGE=prod webpack",
        "compile:alpha:linux": "cross-env STAGE=alpha electron-builder --linux --x64 --config electron-builder-config.js",
        "compile:alpha:mac": "cross-env STAGE=alpha electron-builder --mac --x64 --config electron-builder-config.js",
        "compile:alpha:win": "cross-env STAGE=alpha electron-builder --win --x64 --config electron-builder-config.js",
        "compile:beta:linux": "cross-env STAGE=beta electron-builder --linux --x64 --config electron-builder-config.js",
        "compile:beta:mac": "cross-env STAGE=beta electron-builder --mac --x64 --config electron-builder-config.js",
        "compile:beta:win": "cross-env STAGE=beta electron-builder --win --x64 --config electron-builder-config.js",
        "compile:prod:linux": "cross-env STAGE=prod electron-builder --linux --x64 --config electron-builder-config.js",
        "compile:prod:mac": "cross-env STAGE=prod electron-builder --mac --x64 --config electron-builder-config.js",
        "compile:prod:win": "cross-env STAGE=prod electron-builder --win --x64 --config electron-builder-config.js"
    },
    "dependencies": {
        "@amplitude/analytics-node": "1.1.3",
        "@ethereumjs/rlp": "4.0.1",
        "@ethereumjs/tx": "4.1.2",
        "@ethereumjs/util": "8.0.6",
        "@ledgerhq/hw-app-eth": "6.33.0",
        "@ledgerhq/hw-transport-node-hid": "6.27.13",
        "@ledgerhq/logs": "6.10.1",
        "@types/webpack-dev-server": "4.7.2",
        "buffer": "6.0.3",
        "dotenv": "16.3.1",
        "electron-dl": "3.5.0",
        "electron-log": "4.4.8",
        "electron-updater": "6.1.1",
        "https-browserify": "1.0.0",
        "keytar": "7.9.0",
        "node-machine-id": "1.1.12",
        "stream-http": "3.2.0",
        "url": "0.11.0"
    },
    "devDependencies": {
        "@types/webpack": "5.28.1",
        "copy-webpack-plugin": "11.0.0",
        "cross-env": "7.0.3",
        "css-loader": "6.7.3",
        "electron": "25.3.0",
        "electron-builder": "24.1.2",
        "electron-notarize": "1.2.2",
        "esbuild-loader": "3.0.1",
        "lodash.merge": "4.6.2",
        "mini-css-extract-plugin": "2.7.6",
        "node-loader": "2.0.0",
        "npm-run-all": "4.1.5",
        "postcss-url": "10.1.3",
        "ts-node": "10.9.1",
        "webpack": "5.82.0",
        "webpack-cli": "5.1.4",
        "webpack-dev-server": "4.13.1"
    }
}
